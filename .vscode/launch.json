{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome against localhost",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/src",
        "preLaunchTask": "npm: start",
        "sourceMaps": true,
        "skipFiles": ["node_modules/**"]
